<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:estacionamentoApp.View"
             xmlns:Cadastro="clr-namespace:estacionamentoApp.View.Cadastro" x:Class="estacionamentoApp.View.EntradaVeiculo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid >
        <DataGrid x:Name="dtaEV" HorizontalAlignment="Left" Height="246" VerticalAlignment="Top" Width="800"  AutoGenerateColumns="False"  CanUserAddRows="False" SelectionChanged="DtaEV_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="dtgIdVaga" Header="ID VAGA" Binding="{Binding idVaga}" />
                <DataGridTextColumn Header="ID Carro" Binding="{Binding idCarro}"/>
                <DataGridTextColumn Header="Placa" Binding="{Binding placa}" />
                <DataGridTextColumn Header="Hora entrada" Binding="{Binding horaEntrada}" />
                <DataGridTextColumn Header="VAGA" Binding="{Binding disponivel}"/>


            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnFecharCarro" Content="Fechar" HorizontalAlignment="Left" Margin="183,334,0,0" VerticalAlignment="Top" Width="75" Click="BtnFecharCarro_Click" />
        <Label x:Name="label_Copy" Content="Fechar conta" HorizontalAlignment="Left" Margin="180,269,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnEstacionar" Content="Estacionar" HorizontalAlignment="Left" Margin="18,334,0,0" VerticalAlignment="Top" Width="75" Click="BtnEstacionar_Click"/>
        <Label x:Name="label_Copy1" Content="Estacionar Carro PLACA" HorizontalAlignment="Left" Margin="0,269,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPLACAcarro" HorizontalAlignment="Left" Height="23" Margin="0,300,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblPlaca" Content="PLACA" HorizontalAlignment="Left" Margin="198,300,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Hora Entrada" HorizontalAlignment="Left" Margin="325,269,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblHE" Content="HORA" HorizontalAlignment="Left" Margin="341,295,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Hora Saida" HorizontalAlignment="Left" Margin="329,325,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblHS" Content="HORA" HorizontalAlignment="Left" Margin="341,351,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label4" Content="Total até o momento" HorizontalAlignment="Left" Margin="520,299,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblTotal" Content="$$$" HorizontalAlignment="Left" Margin="559,325,0,0" VerticalAlignment="Top"/>


    </Grid>
</UserControl>
